<%- include('partials/header.ejs') %> 
    <div class="container card mt-4 p-3" style="max-width: 650px;">
        <form action="/editar/<%= tornillo.id %> " method="POST">
            <div class="mb-1">
              <label for="nameTornillo" class="form-label">Nombre</label>
              <input type="text" name="nombre" class="form-control" id="nameTornillo" value="<%= tornillo.nombre%>">
            </div>
            <div class="mb-1">
              <label for="diametroTornillo" class="form-label">Diametro</label>
              <input type="number" name="diametro" class="form-control" id="diametroTornillo" value="<%= tornillo.diametro%>">
            </div>
            <div class="mb-1">
                <label for="longitudTornillo" class="form-label">Longitud</label>
                <input type="number" name="longitud" class="form-control" id="longitudTornillo" value="<%= tornillo.longitud%>">
              </div>
              <div class="mb-1">
                <label for="roscaTornillo" class="form-label">Rosca</label>
                <input type="text" name="rosca" class="form-control" id="roscaTornillo" value="<%= tornillo.rosca%>">
              </div>
              <div class="mb-1">
                <label for="cabezaTornillo" class="form-label">Cabeza</label>
                <input type="text" name="cabeza" class="form-control" id="cabezaTornillo" value="<%= tornillo.cabeza%>">
              </div>
              <div class="mb-1">
                <label for="claseCabezaTornillo" class="form-label">Clase Cabeza</label>
                <input type="text" name="claseCabeza" class="form-control" id="claseCabezaTornillo" value="<%= tornillo.claseCabeza%>">
              </div>
              <div class="mb-1">
                <label for="materialTornillo" class="form-label">Material</label>
                <input type="text" name="material" class="form-control" id="materialTornillo" value="<%= tornillo.material%>">
              </div>
            <button type="submit" class="btn btn-primary mt-3">Guardar</button>
        </form>
    </div>
<%- include('partials/footer.ejs') %> 